/*
* @pagination 分页组件样式表
* @仿Bootstrap样式UI
* @author: Jeff Guo
*/
.pagination
  display inline-block
  padding-left 0
  margin 20px 0
  border-radius 4px
  -moz-user-select none
  -webkit-user-select none
  -ms-user-select none;
  -khtml-user-select none;
  user-select none;
  & > li
    display inline
    & > a,& > span
      float left
      padding 6px 12px
      margin-left -1px
      line-height 1.42857143
      color #337ab7
      text-decoration none
      background-color #fff
      border 1px solid #ddd
      cursor pointer
    &:first-child
      & > a,& > span
        margin-left 0
        border-top-left-radius 4px
        border-bottom-left-radius 4px
    &:last-child
      & > a,& > span
        border-top-right-radius 4px
        border-bottom-right-radius 4px
    & > a:hover,& > span:hover,& > a:focus,& > span:focus
      z-index 3
      color #23527c
      background-color #eee
      border-color #ddd
  & > .active
    & > a,& > span,& > a:hover,& > span:hover,& > a:focus,& > span:focus
      z-index 2
      color #fff
      cursor default
      background-color #337ab7
      border-color #337ab7
  & > .disabled
    & > span,& > span:hover,& > span:focus,& > a,& > a:hover,& > a:focus
      color #777
      cursor not-allowed
      background-color #fff
      border-color #ddd
  .pagination_skip
    font-size 13px
    border none
    margin-left 15px
    &>input
      -moz-appearance:textfield;
      font-family: inherit;
      line-height: inherit;
      border: 1px solid #ddd;
      border-radius: 2px;
      padding: 8px 2px;
      width: 30px;
      text-align: center;
      margin: 0 6px;
      box-sizing: border-box;
      transition: border .3s;
      font-size 12px
      &::-webkit-inner-spin-button, &::-webkit-outer-spin-button
        -webkit-appearance: none;
        margin: 0;
      &:focus
        outline: none;
        border-color: #337ab7;